<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springboot.shiro.mapper.UserMapper" >

  <resultMap id="BaseResultMap" type="com.example.springboot.shiro.entity.User">
      <id column="id" property="id" jdbcType="INTEGER" />
      <result column="username" property="username" jdbcType="VARCHAR" />
      <result column="gender" property="gender" jdbcType="INTEGER" />
      <result column="password" property="password" jdbcType="VARCHAR" />
      <result column="role_id" property="roleId" jdbcType="INTEGER" />
      <result column="mobile" property="mobile" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="NonIncludePasswordFields">
    id, username, gender, mobile, role_id
  </sql>

    <sql id="AllFields">
    id, username, password, gender, mobile, role_id
  </sql>

  <select id="findUserByUserName" parameterType="String" resultMap="BaseResultMap">
      SELECT
        <include refid="AllFields" />
      FROM
        t_user t1
      WHERE username = #{username}
  </select>
  <select id="findAllUsers" resultMap="BaseResultMap">
      SELECT
        <include refid="NonIncludePasswordFields" />
      FROM
        t_user
  </select>
    <select id="findUsersByRoleId" parameterType="Integer" resultMap="BaseResultMap">
        SELECT
          <include refid="NonIncludePasswordFields" />
        FROM
          t_user
        WHERE
          role_id = #{roleId}
    </select>
    <select id="findUsersByCondition" resultMap="BaseResultMap">
        SELECT
            <include refid="NonIncludePasswordFields" />
        FROM
            t_user
        WHERE username LIKE CONCAT('%', #{username}, '%')
    </select>
</mapper>